{
    "name": "foundationPureHtml",
    "version": "1.0.0",
    "description": "",
    "author": {
        "name": "Project Name"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "http://github.com/cferdinandi/build-tools-boilerplate"
    },
    "scripts": {
        "clean": "recursive-delete dist",
        "js": "rollup --config rollup.javascript.js",
        "css": "node sass.js",
        "svg": "svgo -f src dist -r --disable=removeViewBox,removeTitle",
        "img": "node img.js",
        "page": "node html.js",
        "build-dirty": "npm-run-all -p js css svg img page",
        "build": "cross-env NODE_ENV=production npm-run-all -s clean build-dirty",
        "watch-css": "chokidar ./src/resource/scss/** -c \"npm run css\"",
        "watch-js": "chokidar ./src/resource/js/** -c \"npm run js\"",
        "watch-svg": "chokidar ./src/resource/image/** -c \"npm run svg\"",
        "watch-img": "chokidar ./src/resource/image/** -c \"npm run img\"",
        "watch-page": "chokidar ./src/page/** ./src/layout/** -c \"npm run page\"",
        "watch": "npm-run-all -p watch-css watch-js watch-svg watch-img watch-page",
        "server-start": "browser-sync start --reload-delay 800 --files \"src\" --server \"dist\"",
        "server": "npm-run-all -p clean build-dirty watch server-start"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "browser-sync": "^2.26.14",
        "chokidar-cli": "^2.1.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "imagemin-cli": "^6.0.0",
        "imagemin-dir": "^1.0.0-alpha.1",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngcrush": "^6.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-sharp": "^1.0.6",
        "imagemin-webp": "^8.0.0",
        "imagemin-zopfli": "^6.0.0",
        "npm-run-all": "^4.1.5",
        "nunjucks-to-html": "^1.1.0",
        "recursive-fs": "^2.1.0",
        "rollup": "^2.6.1",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-multi-input": "^1.4.1",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.26.5",
        "svgo": "^1.3.2"
    },
    "dependencies": {
        "jquery": "^3.7.1",
        "modernizr": "^3.13.0"
    }
}
