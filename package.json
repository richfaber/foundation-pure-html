{
    "name": "foundationPureHtml",
    "version": "1.0.0",
    "description": "",
    "author": {
        "name": "Project Name"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "http://github.com/cferdinandi/build-tools-boilerplate"
    },
    "scripts": {
        "clean": "recursive-delete dist",
        "js-chunk": "rollup --config task/rollup.chunk.js",
        "js-page": "rollup --config task/rollup.page.js",
        "css": "babel-node task/sass.js",
        "svg": "svgo -f src dist -r --disable=removeViewBox,removeTitle",
        "img": "babel-node task/img.js",
        "html": "babel-node task/html.js",
        "build-dirty": "npm-run-all -p js-chunk js-page css svg img html",
        "build": "cross-env NODE_ENV=production npm-run-all -s clean build-dirty",
        "watch-css": "chokidar ./src/resource/scss/** -c \"npm run css -- {path} {event}\"",
        "watch-js-chunk": "chokidar ./src/resource/js/*.* -c \"npm run js-chunk\"",
        "watch-js-page": "chokidar ./src/resource/js/page/**/* -c \"npm run js-page\"",
        "watch-svg": "chokidar ./src/resource/image/** -c \"npm run svg -- {path} {event}\"",
        "watch-img": "chokidar ./src/resource/image/** -c \"npm run img -- {path} {event}\"",
        "watch-html": "chokidar ./src/page/** ./src/layout/** -c \"npm run html -- {path} {event}\"",
        "watch": "npm-run-all -p watch-css watch-js-chunk watch-js-page watch-svg watch-img watch-html",
        "server-start": "browser-sync start --reload-delay 800 --files \"src\" --server \"dist\"",
        "server": "npm-run-all -p clean build-dirty watch server-start"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.5",
        "@babel/core": "^7.24.5",
        "@babel/node": "^7.23.9",
        "@babel/preset-env": "^7.24.5",
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-eslint": "^9.0.5",
        "@rollup/plugin-inject": "^5.0.5",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-multi-entry": "^6.0.1",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "browser-sync": "^2.26.14",
        "chokidar-cli": "^2.1.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "glob": "^10.3.12",
        "imagemin-cli": "^6.0.0",
        "imagemin-dir": "^1.0.0-alpha.1",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngcrush": "^6.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-sharp": "^1.0.6",
        "imagemin-webp": "^8.0.0",
        "imagemin-zopfli": "^6.0.0",
        "js-beautify": "^1.15.1",
        "npm-run-all": "^4.1.5",
        "nunjucks-to-html": "^1.1.0",
        "recursive-fs": "^2.1.0",
        "rollup": "^2.6.1",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.26.5",
        "svgo": "^1.3.2"
    },
    "dependencies": {
        "jquery": "^3.7.1"
    }
}
